<%= render('base/shared/graph_bar', :data => @histogram, :height => 150) if @histogram %>
<% if @notifications %>
  <%= notification_list @notifications, :toolbar => nil, :new_link => link_to(icon('bar-chart', 'more...'), notification_reports_path(:ns_path => @ns_path, :period => 'today')) if @notifications.present? %>
<% else %>
  <p class="text-error"><%= icon('warning-sign') %> <strong>Failed to retrieve notifications</strong></p>
<% end %>
