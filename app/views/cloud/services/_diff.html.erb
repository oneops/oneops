<% changes_only = params[:changes_only] != 'false'
   menu = [link_busy(icon(changes_only ? 'check' : 'check-empty', 'changes only'),
                                :url          => diff_cloud_services_path(@cloud, :changes_only => !changes_only),
                                :remote       => true,
                                'data-toggle' => 'button',
                                :class        => "btn btn-mini #{'active' if changes_only}")] %>
<%= section_panel 'Differences with Template', :width => 'triple', :menu => menu do %>
  <%= render 'base/shared/ci_diff_list', :cis => @diff, :changes_only => changes_only %>
<% end %>
