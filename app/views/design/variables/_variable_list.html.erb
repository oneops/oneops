<%= section_panel 'Variables',
                  :width => 'single',
                  :menu  => [link_to(icon('star-o', 'New Variable'), new_assembly_design_variable_path(@assembly), :remote => true, :class => 'btn btn-mini')] do %>
  <%= ci_list(@variables, :new_link => link_to('New Variable...', new_assembly_design_variable_path(@assembly), :remote => true)) do |builder, target| %>
    <% builder.target link_to('', edit_assembly_design_variable_path(@assembly, target), :remote => true) %>
	 <% builder.icon :none %>
    <% builder.middle target.ciAttributes.attributes['secure'] == 'true' ? icon('key', '*******') : target.ciAttributes.value  %>
    <% if has_design?(@assembly.ciId) %>
      <% builder.menu do |ci| %>
        <%= link_to(icon('trash',' Delete'), assembly_design_variable_path(@assembly, ci),      :remote => true, :method => :delete, :confirm => "Delete variable '#{ci.ciName}'?") %>
      <% end %>
    <% end %>

  <% end %>
<% end %>
<%= section_panel 'Variable Details', :id => 'variable_details', :width => 'double', :position => 'right' do %>
  Please select a variable from the list to view/edit it or create a new variable.
<% end %>
