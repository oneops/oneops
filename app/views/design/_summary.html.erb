<%= section_panel('Platforms',
                  :id   => 'platform_list', :width => 'single', :position => 'right',
                  :menu => [{:display => icon('plus','Add'), :link => new_assembly_design_platform_path(@assembly)}]) do %>
  <%= render 'platform_list' %>
<% end %>

<%= section_panel 'Status', :id => 'status_section', :width => 'double', :position => 'left' do %>
  <%= render :partial => 'status' %>
<% end %>

<% if @diagram %>
  <%= section_panel('Diagram',
                    :width    => 'double',
                    :position => 'left',
                    :menu     => [link_to(content_tag(:i, '', :class => 'icon-resize-full') + ' Full', diagram_assembly_design_path(@assembly, :size => '11,8'), :target => '_blank', :class => 'btn btn-mini')]) do %>
  	<div class="diagram"><%= raw(@diagram) %></div>
  <% end %>
<% end %>
