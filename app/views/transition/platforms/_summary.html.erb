<%= section_panel 'Components', :id => 'components_list', :width => 'single', :position => 'right' do %>
  <div id="component_list">
    <i class="icon-spinner icon-spin"></i> Loading...
  </div>
  <script type="text/javascript">
    <%= remote_function(:url => assembly_transition_environment_platform_components_path(@assembly, @environment, @platform), :method => :get) %>
  </script>
<% end %>

<% if @scale_relations.present? %>
  <%= section_panel 'Scaling', :id => 'platform_configuration', :width => 'double', :position => 'left' do %>
    <div id="platform_configuration"><%= render 'configuration' %></div>
  <% end %>
<% end %>

<%= section_panel 'Platform Status', :width => 'double', :position => 'left' do %>
  <div id="platform_status"><%= render('platform_status') %></div>
<% end %>

<%= section_panel 'Cloud Status', :width => 'double', :position => 'left' do %>
  <div id="cloud_status"><%= render 'cloud_status' %></div>
<% end %>
